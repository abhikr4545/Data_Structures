#include<iostream>
using namespace std;

class Node {
public:
	int data;
	Node* next;
};

int main()
{
	int i,pos;

	Node *head = NULL;
	Node *first = NULL;
	Node *second = NULL;
	Node *tail = NULL;
	Node *temp = NULL;
	Node *prenode = NULL;

	head = new Node();
	first = new Node();
	second = new Node();
	tail = new Node();
	temp = new Node();
	prenode = new Node();

	head->data = 10;
	head->next = first;

	first->data =20 ;
	first->next =second ;

	second->data =30 ;
	second->next =tail ;

	tail->data = 40 ;
	tail->next =NULL ;

	temp = head;

	cout << "List before deletion : ";

	while (temp != NULL)
	{
		cout << temp->data<<" ";
		temp = temp->next;
	}

	cout << "\n";
	temp = head;

	cout << "Enter the position of node to be deleted\n";
	cin >> pos;

	for(i=0;i<pos-1;i++)
        temp = temp->next;

	temp->next=temp->next->next;
	cout << "List after deletion : ";

	temp = head;

	while (temp!= NULL)
	{
		cout << temp->data<<" ";
		temp = temp->next;
	}

}
